<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cottontex.graphdep.controllers.user.UserTimeOffController"
      spacing="10" alignment="CENTER" prefWidth="300" prefHeight="250">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Start Date:"/>
    <DatePicker fx:id="startDatePicker"/>

    <Label text="End Date:"/>
    <DatePicker fx:id="endDatePicker"/>

    <Label text="Type:"/>
    <ComboBox fx:id="typeComboBox"/>

    <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick"/>
</VBox>