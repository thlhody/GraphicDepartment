<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jfxtras.scene.control.LocalTimePicker?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cottontex.graphdep.controllers.UserController"
      style="-fx-background-color: #f0f0f0;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeLabel" style="-fx-text-fill: #2c3e50; -fx-font-size: 24px; -fx-font-weight: bold;" />
    <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 14px;" />

    <VBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Time Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER">
            <DatePicker fx:id="datePicker" style="-fx-min-width: 200;"/>
            <LocalTimePicker fx:id="timePicker" style="-fx-min-width: 200;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="startButton" text="Start Work" onAction="#onStartButtonClick"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            <Button fx:id="pauseButton" text="Pause Work" onAction="#onPauseButtonClick" disable="true"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
            <Button fx:id="endButton" text="End Work" onAction="#onEndButtonClick" disable="true"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="myAccountButton" text="My Account" onAction="#onMyAccountButtonClick"
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButtonClick"
                style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
    </HBox>
</VBox>